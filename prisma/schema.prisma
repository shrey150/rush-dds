generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WaitlistEntry {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  uniqueEdge String
  reason     String
  status     Status   @default(PENDING)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("waitlist_entries")
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

